module cfs/Modules

imports
	lex/Identifier
	lex/Text
	cfs/Expressions
	cfs/Definitions

context-free start-symbols
	Module
	ModuleI
	Dir

template options
	tokenize: "#"
	keyword -/- [A-Za-z0-9]

templates
	Module.Module = [[ModulePhrase+]]
	
	ModulePhrase = [[Expr];;]
	ModulePhrase = [[ValDef];;]
	ModulePhrase = [[TypeDef];;]
	ModulePhrase = [[ExcDef];;]
	ModulePhrase = [[Dir];;]

	ModuleI.Interface = [[IntfPhrase+]]
	
	IntfPhrase = [[ValDecl];;]
	IntfPhrase = [[TypeDef];;]
	IntfPhrase = [[ExcDef];;]
	IntfPhrase = [[Dir];;]

	Dir.OpenDir   = [#open [STRING]]
	Dir.CloseDir  = [#close [STRING]]
	//avoid when open or close can be chosen
	Dir.CustomDir = [#[IDENT] [STRING]] {avoid}